generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  fullName      String
  role          String
  email         String         @unique
  password      String
  phoneNumber   String?
  idNumber      String?
  createdAt     DateTime       @default(now())
  transactions  Transaction[]
}

model Book {
  id              Int            @id @default(autoincrement())
  title           String
  author          String
  ISBN            String         @unique
  category        String
  totalCopies     Int
  availableCopies Int
  createdAt       DateTime       @default(now())
  transactions    Transaction[]
}

model Transaction {
  id        Int       @id @default(autoincrement())
  userId    Int
  bookId    Int
  status    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  book      Book      @relation(fields: [bookId], references: [id])
}
